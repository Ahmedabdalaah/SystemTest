@model Category

@{
    ViewData["Title"] = "EditCategory";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pt-2">
            <h3 class="text-bg-primary"> تعديل بيانات قسم </h3>
            <hr />
            <div asp-validation-summary="All"></div>
            <div class="mb-2">
                <label asp-for="Name"></label>
                <hr/>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-bg-danger"></span>
                <hr />
                <div class="align-content-center">
                    <button type="submit" class=" btn btn-success" style="width:150px"> تعديل </button>
                    &nbsp; &nbsp; &nbsp; &nbsp;
                    <a asp-controller="Category" asp-action="FindAll" class="btn btn-danger" style="width:150px">
                        رجوع
                    </a>
                </div>
            </div>
        </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}