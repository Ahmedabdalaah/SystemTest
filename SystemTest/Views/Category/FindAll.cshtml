
@model IEnumerable<Category>

@{
    ViewData["Title"] = "FindAll";
}
<h3> Categories </h3>
<div class="text-end">
    <a asp-controller="Category" asp-action="AddCategory" class="btn btn-success">
        <i class="bi bi-file-plus"></i>
        &nbsp; Add new Category
    </a>
</div>
<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>Category Id</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model){
            <tr class="table-active">
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.Id" class=" btn-success">
                        <i class="bi bi-pencil"></i>   
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@category.Id" class=" btn-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>