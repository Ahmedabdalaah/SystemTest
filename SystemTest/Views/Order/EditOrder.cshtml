@model Order

@{
    ViewData["Title"] = "EditOrder";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pt-2">
            <h3 class="text-bg-primary"> Edit  Order </h3>
            <hr />
            <div asp-validation-summary="All"></div>
            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-bg-danger"></span>
                <hr />
                <label asp-for="Description" class="from-control"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="from-control"></span>
                <hr />
                <div class="align-content-center">
                    <button type="submit" class=" btn btn-success" style="width:150px"> Save </button>
                    &nbsp; &nbsp; &nbsp; &nbsp;
                    <a asp-controller="Order" asp-action="FindAllOrder" class="btn btn-danger" style="width:150px">
                        Back
                    </a>
                </div>
            </div>
        </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
